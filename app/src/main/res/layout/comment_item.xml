<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_item"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:gravity="center">
    <FrameLayout

        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <com.example.yonggu.module2.RecyclingImageView
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:id="@+id/commentImageView"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:background="@drawable/talk_box_left"
            android:text=" "
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <LinearLayout
            android:background="@drawable/talk_box"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nickNameTextView"
                    android:textColor="@color/nameColor"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="영구"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="10dp"
                    android:text="2016/02/23 16:51:37"
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="로딩 중입니다.."
                android:id="@+id/commentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>